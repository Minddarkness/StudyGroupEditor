@{
    ViewData["Title"] = "Учебные группы";
}
@model IEnumerable<StudyGroupEditor.Models.DatabaseModels.Group>

<div class="text-center">
    <h1 class="display-4">Учебные группы</h1>
    <h2>Учебные группы</h2>
    <table class="table">
        <tr>
            <th>Название</th>
            <th>Преподаватель</th>
            <th>Количество студентов</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Teacher.Name</td>
                <td>@item.Employees.Count</td>
                <td>Редактировать</td>
            </tr>
        }
    </table>
    <p><a asp-action="AddGroup">Добавить группу</a></p>
    @* <p> *@
    @*     <input onclick="Create" type="button" value="Добавить группу" /> *@
    @* </p> *@
</div>