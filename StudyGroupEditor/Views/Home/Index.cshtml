@{
    ViewData["Title"] = "Учебные группы";
}
@model IEnumerable<StudyGroupEditor.Models.DatabaseModels.Group>

<div class="text-center">
    <h1 class="display-4">Учебные группы</h1>
    <h2>Учебные группы</h2>
    <table class="table">
        <tr>
            <th>Название</th>
            <th>Преподаватель</th>
            <th>Количество студентов</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Teacher.Name</td>
                <td>@item.Employees.Count</td>
                
                <td> <form method="post" >
                    @* <a asp-action="Edit" asp-route-id="@item.GroupId">Редактировать</a> *@
                    <a asp-controller="EditGroup" asp-action="Index" asp-route-id="@item.GroupId">Редактировать</a>
                </form></td>
            </tr>
        }
    </table>
    <button type="button" class="btn" onclick="window.location.href = '/AddGroup'">Добавить группу</button>
</div>